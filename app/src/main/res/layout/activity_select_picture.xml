<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 標題欄 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/icon_activity_select_picture_top_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/openPictureLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/icon_activity_select_picture_open_picture"
            android:layout_width="170dp"
            android:layout_height="170dp"/>

        <TextView
            android:textSize="16dp"
            android:layout_marginTop="32dp"
            android:textColor="#ACACAC"
            android:text="Tap anywhere to open picture."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_weight="1"
        android:id="@+id/cropFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>
</LinearLayout>